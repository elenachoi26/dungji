<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignupActivity">

    <EditText
        android:id="@+id/emailEdit"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/box_style"
        android:ems="10"
        android:hint="이메일"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:textSize="20sp"

        tools:ignore="TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="15dp" />

    <TextView
        android:id="@+id/nullEmailText"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:text="이메일을 입력해주세요."
        android:textColor="#FF4040"
        android:visibility="gone" />

    <TextView
        android:id="@+id/wrongEmailText"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:text="이메일 형식이 맞지 않습니다."
        android:textColor="#FF4040"
        android:visibility="gone" />

    <EditText
        android:id="@+id/passwordEdit"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/box_style"
        android:ems="10"
        android:hint="비밀번호 (6자 이상)"
        android:inputType="textPersonName|textPassword"
        android:paddingStart="10dp"
        android:textSize="20sp"
        tools:ignore="TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="75dp" />

    <TextView
        android:id="@+id/nullPasswordText"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:text="비밀번호를 입력해주세요."
        android:textColor="#FF4040"
        android:visibility="gone" />

    <TextView
        android:id="@+id/wrongPasswordText"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:text="비밀번호는 6자 이상입니다."
        android:textColor="#FF4040"
        android:visibility="gone" />

    <EditText
        android:id="@+id/nameEdit"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/box_style"
        android:ems="10"
        android:hint="이름"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:textSize="20sp"
        tools:ignore="TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="134dp" />

    <TextView
        android:id="@+id/nullNameText"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:text="이름을 입력해주세요."
        android:textColor="#FF4040"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/yearSpinner"
            android:layout_width="125dp"
            android:layout_height="45dp"
            android:layout_marginRight="13dp"
            android:background="@drawable/box_style"
            android:entries="@array/year_arrays"
            android:prompt="@string/year_prompt"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
            tools:layout_editor_absoluteX="58dp"
            tools:layout_editor_absoluteY="194dp" />

        <Spinner
            android:id="@+id/monthSpinner"
            android:layout_width="65dp"
            android:layout_height="45dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/box_style"
            android:entries="@array/month_arrays"
            android:prompt="@string/month_prompt"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
            tools:layout_editor_absoluteX="203dp"
            tools:layout_editor_absoluteY="194dp" />

        <Spinner
            android:id="@+id/daySpinner"
            android:layout_width="65dp"
            android:layout_height="45dp"
            android:background="@drawable/box_style"
            android:entries="@array/day_arrays"
            android:prompt="@string/day_prompt"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
            tools:layout_editor_absoluteX="289dp"
            tools:layout_editor_absoluteY="194dp" />
    </LinearLayout>


    <EditText
        android:id="@+id/nicknameEdit"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/box_style"
        android:ems="10"
        android:hint="닉네임"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:textSize="20sp"
        tools:ignore="TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="254dp" />

    <TextView
        android:id="@+id/nullNicknameText"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:text="닉네임을 입력해주세요."
        android:textColor="#FF4040"
        android:visibility="gone" />

    <TextView
        android:id="@+id/duplicateNicknameText"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:text="이미 사용중인 닉네임입니다."
        android:textColor="#FF4040"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:srcCompat="@raw/grandmother"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="319dp" />


    <Button
        android:id="@+id/signupBtn"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="회원가입"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="440dp" />

</LinearLayout>
